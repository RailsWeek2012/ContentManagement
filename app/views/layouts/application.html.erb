<!DOCTYPE html>
<html>
<head>
  <title>ContentManagement</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "layouts/navbar" %>
  <div id="container">
    <div id="header">
      <h1></h1>
      <!--<%= session[:return_to] %>-->
    </div>
    <div id="content">
      <% if flash[:notice] %>
        <p id="notice">
          <%= flash[:notice] %>
        </p>
      <% end %>
      <% if flash[:alert] %>
        <p id="alert">
          <%= flash[:alert] %>
        </p>
      <% end %>
      <%= yield %>
    </div>
    <div id="footer">
      &copy 2012 |
      <%= link_to "Impressum", impressums_url %>
      <% if user_signed_in? %>
        | Userstatus:
        <%= case get_rights
              when 1
                "Newsposter"
              when 2
                "Operator"
              when 3
                "Master"
              when 4
                "Admin"
            end %>
      <% end %>
    </div>
  </div>
</body>
</html>
